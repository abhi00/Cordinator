<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:weightSum="8"
        android:layout_height="match_parent">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="6dp"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="#000"
            android:text="Post Homework"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="6dp"
            android:text="Select Catagory"
            android:textSize="20dp" />


        <Spinner
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="6dp"
            android:layout_weight="0.5"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/catagary_spinn"
            >

        </Spinner>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="6dp"
            android:orientation="horizontal"
            android:layout_weight="0.5"
            android:weightSum="3">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textColor="#000"
                android:text="Select Class"
                android:textSize="20dp" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Section"
                android:textColor="#000"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="6dp"
            android:orientation="horizontal"
            android:layout_weight="0.5"
            android:weightSum="3">

            <Spinner
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:id="@+id/class_spinn"></Spinner>

            <Spinner
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:id="@+id/section_spinn"
                ></Spinner>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="6dp"
            android:text="Select User Catagory"
            android:textSize="20dp" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="6dp"
            android:layout_weight="0.5"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/userCatagory_spinn"
            ></Spinner>
        <EditText
            android:layout_width="match_parent"
            android:layout_marginTop="6dp"
            android:id="@+id/editTextHmwrk"
            android:layout_height="wrap_content" />


    </LinearLayout>




</RelativeLayout>