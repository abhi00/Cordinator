<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_login"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="130dp"
        android:layout_marginLeft="40dp"
        app:cardCornerRadius="9dp"
        android:layout_marginRight="40dp"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="12"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:text="SignUp"
                android:textColor="#62c2ec"
                android:gravity="center"
                android:textSize="26dp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Email"
                android:textColor="#000"
                android:layout_margin="6dp"
                android:textSize="19dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="0dp"

                android:id="@+id/txtemail_signup"
                android:layout_margin="6dp"
                android:background="@drawable/edttxt_design"
                android:layout_weight="1.5"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textColor="#000"
                android:text="Password"
                android:layout_margin="6dp"
                android:textSize="19dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/txtpass_signup"
                android:layout_margin="6dp"
                android:background="@drawable/edttxt_design"
                android:layout_weight="1.5"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="horizontal"
                android:weightSum="3">
<RadioGroup
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
                <RadioButton
                    android:layout_width="0dp"
                    android:id="@+id/rd_btn_admin_signup"
                    android:layout_marginBottom="9dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Admin"/>

                <RadioButton
                    android:layout_width="0dp"
                    android:id="@+id/rd_btn_teacher_signup"
                    android:layout_marginBottom="9dp"
                    android:layout_height="match_parent"
                    android:text="Teacher"
                    android:layout_weight="1"/>

                <RadioButton
                    android:layout_width="0dp"
                    android:id="@+id/rd_btn_parent_signup"
                    android:text="Parent"
                    android:layout_marginBottom="9dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
</RadioGroup>
            </LinearLayout>



    <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:id="@+id/btn_signup"
                android:textColor="#fff"
                android:layout_marginRight="39dp"
                android:layout_marginLeft="39dp"
                android:text="SignUp"
                android:textSize="21dp"
                android:background="@drawable/btn_dsgn"
                android:textStyle="bold"
                android:gravity="center"
                />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>